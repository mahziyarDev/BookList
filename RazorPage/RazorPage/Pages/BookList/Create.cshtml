@page
@model RazorPage.Pages.BookList.CreateModel
@{
}
<br />
<h2 class="text-info">Create New Book</h2>
<hr />
<div asp-validation-summary="All"></div>
<div class="border container" style="padding: 30px">
    <form method="post">
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Name"></label>
                
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" />
                
                <span class="text-danger" asp-validation-for="Book.Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" />
                <span class="text-danger" asp-validation-for="Book.Author"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
            </div>
            <div class="col-6">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                <a class="btn btn-link" asp-page="Index">Back To List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="Shared/_ValidationScriptsPartial"/>
}